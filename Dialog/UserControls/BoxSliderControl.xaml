<UserControl x:Class="WpfApp1.UserControls.BoxSliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="140">
    <Grid>
        <Slider x:Name="Slider1" HorizontalAlignment="Center" Margin="0,40,0,0" Width="120" TickPlacement="BottomRight" IsSnapToTickEnabled="True" ValueChanged="Slider1_ValueChanged" GotFocus="Slider1_GotFocus" Maximum="100" Height="20" VerticalAlignment="Top"/>
        <TextBox x:Name="NumBox1" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Width="120" AutomationProperties.IsColumnHeader="True" TextChanged="NumBox1_TextChanged" Initialized="NumBox1_Initialized" LostFocus="NumBox1_LostFocus" Height="20" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
